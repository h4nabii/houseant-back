<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.houseant.backend.dao.HouseInfoDAO">

    <resultMap id="HouseResultMap" type="com.houseant.backend.entity.House">
        <id property="house_id" column="house_id"/>
        <id property="account" column="account"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="price" column="price"/>
        <result property="area" column="area"/>
        <result property="picture" column="picture"/>
        <result property="floor" column="floor"/>
        <result property="direction" column="direction"/>
        <result property="layout" column="layout"/>
        <result property="developer" column="developer"/>
        <result property="build_time" column="build_time"/>
        <result property="has_elevator" column="has_elevator"/>
    </resultMap>

    <select id="findAll" resultMap="HouseResultMap">
        SELECT *
        FROM housesrc
    </select>

    <select id="findByKey" parameterType="java.util.Map" resultMap="HouseResultMap">
        SELECT * FROM housesrc
        <where>
            <if test="name != null">
                name = #{name}
            </if>
            <if test="address != null">
                AND address = #{address}
            </if>
            <if test="direction != null">
                AND direction = #{direction}
            </if>
            <if test="area != null">
                AND area = #{area}
            </if>
            <if test="layout != null">
                AND layout = #{layout}
            </if>
            <if test="price != null">
                AND price &lt; #{price}
            </if>
            <if test="developer != null">
                AND developer = #{developer}
            </if>
            <if test="floor != null">
                AND floor = #{floor}
            </if>
            <if test="has_elevator != null">
                AND has_elevator = #{has_elevator}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.houseant.backend.entity.House">
        INSERT INTO housesrc (account, name, address, direction, area, layout, price, picture, developer, floor, has_elevator,
                              build_time)
        VALUES (#{account},  #{name}, #{address}, #{direction}, #{area}, #{layout}, #{price}, #{picture}, #{developer}, #{floor},
                #{has_elevator}, #{build_time})
    </insert>

    <delete id="delete">
        DELETE FROM housesrc
        WHERE house_id = #{id}
    </delete>

    <update id="update" parameterType="com.houseant.backend.entity.House">
        UPDATE housesrc
        SET name         = #{name},
            address      = #{address},
            account      = #{account},
            direction    = #{direction},
            area         = #{area},
            layout       = #{layout},
            price        = #{price},
            picture      = #{picture},
            developer    = #{developer},
            floor        = #{floor},
            has_elevator = #{has_elevator},
            build_time   = #{build_time}
        WHERE house_id = #{house_id}
    </update>
</mapper>
